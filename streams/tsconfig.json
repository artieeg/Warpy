{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "strict": true,
    "baseUrl": "./",
    "paths" : {
      "@app/*" : ["src/*"]
    }
  },
  "include": [
    "../backend-lib/**/*"
  ]
}
