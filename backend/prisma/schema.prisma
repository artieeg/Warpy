datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl"]
  previewFeatures = ["referentialActions"]
}

model User {
  id          String       @id @default(cuid())
  username    String
  first_name  String
  last_name   String
  avatar      String
  email       String
  sub         String
  created_at  DateTime     @default(now())
  participant Participant?

  //Stream Stream[]
  @@map(name: "Users")
}

model Participant {
  id            String  @id @default(cuid())
  user_id       String  @unique
  user          User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  stream_id     String?
  stream        Stream?  @relation(name: "participant", fields: [stream_id], references: [id])
  role          String
  isRaisingHand Boolean

  @@unique([user_id, stream_id], name: "stream_participant_index")
  Stream Stream[] @relation("owner")
}

model Stream {
  id           String        @id @default(cuid())
  title        String
  owner        Participant   @relation(name: "owner", fields: [owner_id], references: [user_id], onDelete: Cascade)
  owner_id     String
  hub          String
  live         Boolean
  preview      String?
  participants Participant[] @relation(name: "participant")
  claps        Int
}

model RefreshToken {
  id    String @id @default(cuid())
  token String
}
